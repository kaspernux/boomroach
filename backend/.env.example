# Environment
NODE_ENV=development

# Server Configuration
PORT=3001
API_URL=http://localhost:3001
FRONTEND_URL=http://localhost:3000

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/boomroach_dev?schema=public"

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Solana Configuration
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
SOLANA_CLUSTER=mainnet-beta

# External API Keys
JUPITER_API_KEY=optional-jupiter-api-key
COINGECKO_API_KEY=optional-coingecko-api-key

# Redis (Optional - for caching and rate limiting)
REDIS_URL=redis://localhost:6379

# Email Service (Optional - for notifications)
SENDGRID_API_KEY=your-sendgrid-api-key
FROM_EMAIL=noreply@boomroach.com

# Webhook URLs (Optional)
DISCORD_WEBHOOK_URL=your-discord-webhook-url
SLACK_WEBHOOK_URL=your-slack-webhook-url

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info

# Security
CORS_ORIGIN=http://localhost:3000
COOKIE_SECRET=your-cookie-secret-change-this

# File Upload (Optional)
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# Feature Flags
ENABLE_WEBSOCKET=true
ENABLE_PRICE_UPDATES=true
ENABLE_TRADING_SIGNALS=true
ENABLE_GUILD_WARS=true

# Monitoring (Optional)
SENTRY_DSN=your-sentry-dsn
NEW_RELIC_LICENSE_KEY=your-newrelic-key

# Development Only
DEBUG_SQL=false
MOCK_EXTERNAL_APIS=false
