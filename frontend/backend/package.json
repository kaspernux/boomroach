{
  "name": "boomroach-backend",
  "version": "1.0.0",
  "description": "BoomRoach 2025 Backend API with real-time trading, social features, and gamification",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:seed": "tsx src/scripts/seed.ts",
    "db:studio": "prisma studio",
    "docker:build": "docker build -t boomroach-backend .",
    "docker:run": "docker run -p 8000:8000 boomroach-backend",
    "docker:compose": "docker-compose up -d",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "biome check .",
    "lint:fix": "biome check . --apply",
    "docs": "swagger-jsdoc -d swaggerOptions.js src/routes/*.ts -o swagger.json && swagger-ui-express-cli -f swagger.json"
  },
  "keywords": [
    "solana",
    "meme-coin",
    "trading",
    "websocket",
    "gamification",
    "social",
    "api"
  ],
  "author": "BoomRoach Team",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.15.0",
    "@solana/web3.js": "^1.95.2",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "axios": "^1.7.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.3.1",
    "express-validator": "^7.1.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "prisma": "^5.15.0",
    "redis": "^4.6.14",
    "socket.io": "^4.7.5",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.13.0",
    "ws": "^8.17.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.14.8",
    "@types/ws": "^8.5.10",
    "jest": "^29.7.0",
    "tsx": "^4.15.7",
    "typescript": "^5.5.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  }
}